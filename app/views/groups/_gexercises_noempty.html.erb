
<div class="totaltime">
  <p class="m-0">Total time</p>
  <span class="m-0"><%= group_exercises_time %></span>
</div>
<div class="exercises-list">
  <% @group_exercises.each do |g_exercise| %>
    <div class="exercise-item">
      <div class="ex-item">
        <div class="g_exitem-icon-name-author">
          <span class="exitem-icon"><%= get_icon_exercise(g_exercise) %></span>
          <div class="g_exercise_name_date">
            <p class="g_exercise_name"><%= g_exercise.name %></p>
            <p class="g_exercise_author">Created by <%= author(g_exercise) %></p>
            <span><%= g_exercise.created_at.strftime("%d %b %Y") %></span>
          </div>
        </div>
        <p class="exercise-time">
          <span><%= g_exercise.time %><br>min.</span>
        </p>
        <%= show_edit_del_btns(g_exercise) %>
      </div>
    </div>
  <% end %>
</div>