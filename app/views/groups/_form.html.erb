<%= form_with(model: group) do |form| %>
  <%= render 'layouts/header_logged' %>
  <%= form.submit nav_logged_right, class: 'nav-login-btn' %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mt-4" style="width: 100%;">
    <% form.label :name %>
    <%= form.text_area :name, autofocus: true, autocomplete: "name", placeholder:"Name", class:'new-session-name' %>
  </div>

  <div class="field mt-4" style="width: 100%;">
    <% form.label :icon %>
    <%= form.text_area :icon, autofocus: true, autocomplete: "icon", placeholder:"Icon", class:'new-session-name' %>
  </div>

  <div class="field mt-4" style="width: 100%;">
    <% form.label :user_id %>
    <%= form.number_field :user_id, autofocus: true, autocomplete: "user_id", display: hidden, class:'new-session-name' %>
  </div>

  <div class="field mt-4" style="width: 100%;">
    <% form.label :exercise_id %>
    <%= form.number_field :exercise_id, autofocus: true, autocomplete: "exercise_id", display: hidden, class:'new-session-name' %>
  </div>
<% end %>
