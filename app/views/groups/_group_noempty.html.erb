<div class="group-settings">
  <% @groups.each do |group| %>
    <%= link_to group_exercises_path(group.id), class: 'text-light text-decoration-none' do %>
      <div class="group-setting-item">
        <div class="allgroups_icon"><%= get_icon_group(group) %></div>
        <div class="group-name_date">
          <p><%= group.name %></p>
          <span><%= group.created_at.strftime("%B %d %Y") %></span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>