<%= form_for 'login' do |form| %>
  <%= render 'layouts/navbar' %>
  <%= form.submit 'Log In', method: :post, class: 'nav-login-btn nav-login-btn' %>
  <div class="field mt-4" style="width: 100%;">
    <% form.label :name %>
    <%= form.text_area :name, autofocus: true, autocomplete: "name", placeholder:"Name", class:'new-session-name' %>
  </div>
<% end %>
